  <% if user_signed_in? %>
  <div class="w-full">
    <div class="flex justify-between items-center">

      <%= link_to 'New resume', new_resume_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>

    <div id="resumes" class="min-w-full">
      <%= render @resumes %>
    </div>
  </div>
  <% else %>
  <div>
    <h1 class="font-bold text-4xl">RESUME BUILDER</h1>
    <h3>Create Your resume!</h3>
    <h3>Sign Up! Create! and Save!</h3>
  </div>
  <% end %>