
  <div class="bg-dark bg-opacity-75 text-white mx-auto px-5 py-5 md:w-2/3 w-full">
    <h1 class="font-bold text-4xl">Edit Resume</h1>
  
    <%= render "form", resume: @resume %>
  
    <%= link_to "Show", @resume, class: "btn btn-secondary ml-2 rounded-lg py-3 mt-2 px-5 mb-2 inline-block font-medium" %>

    <%= button_to 'Delete', resume_path(@resume), method: :delete, class: "btn btn-danger mt-2 rounded-lg mb-3 py-2 px-4 font-medium" %>

    <%= link_to "Back to resumes", resumes_path, class: "btn btn-secondary ml-2 rounded-lg mt-2 py-3 px-5 mb-2  inline-block font-medium" %>
  </div>
