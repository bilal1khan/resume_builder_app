
  <div class="bg-dark bg-opacity-75 mx-auto px-5 py-5 md:w-2/3 w-full flex">
    <div class="mx-auto">

      <%= render @resume %>
      
      <%= link_to 'Edit', edit_resume_path(@resume), class: "btn btn-secondary mt-2 mb-3 rounded-lg py-2 px-4 inline-block font-medium" %>

      <div class="inline-block ml-2">
        <%= button_to 'Delete', resume_path(@resume), method: :delete, class: "btn btn-danger mt-2 rounded-lg mb-3 py-2 px-4 font-medium" %>
      </div>
      <%= link_to 'Back to resumes', resumes_path, class: "btn btn-secondary ml-2 rounded-lg mb-3 py-2 px-4 inline-block font-medium" %>

      
    </div>
  </div>
